whatever4711.tk {
  tls whatever4711@gmail.com 
  log / /root/.caddy/logs/webserver.log "{proto} Request: {method} {path} ... {scheme} {host} {remote}"
  basicauth /ui test test 
  redir /ui /ui/ 307
  proxy /ui ui:9000 {
    without /ui
    proxy_header Host {host}/ui
    proxy_header X-Real-IP {remote}
    proxy_header X-Forwarded-Proto {scheme}
  }
}
